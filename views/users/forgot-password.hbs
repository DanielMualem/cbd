<link rel='stylesheet' href="/stylesheets/login-style.css" />

<div class="row" style="margin-top: 100px">
  <div class="col-md-4 offset-md-4">
    {{#if hasErrors}}
      <div class="alert alert-danger">
        {{# each errMsg}}
          <p>{{ this }}</p>
        {{/each}}
      </div>
    {{/if}}
    {{#if hasInfo}}
      <div class="alert alert-primary">
        {{# each infoMsg}}
          <p>{{ this }}</p>
        {{/each}}
      </div>
    {{/if}}
    <div class="wrapper fadeInDown">
      <div id="formContent">
        <!-- Tabs Titles -->
        <div class="fadeIn first">
          <h3 class="stext-my" style="padding-bottom: 20px; padding-top: 20px">Forgot password</h3>
        </div>
        <!-- Login Form -->
        <form action='/users/forgot' method="POST">
          <input type="text" id="email" class="fadeIn second input-my" name="email" placeholder="E-mail">

          <input type="hidden" name="_csrf" value="{{ csrfToken }}">

          <input type="submit" class="fadeIn third" value="Reset">
        </form>

      </div>
    </div>
  </div>
</div>
