


<head>
	<title>User Profile</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<div class="container">
<p class="stext-my2 cl13 m-t-100" >{{user.firstName}}'s Orders</p>
{{# each orders}}
<div class="wrap-table-shopping-cart m-t-75">

	<table class="table-shopping-cart ">
		<tr class="table_head">
			<th class="column-1">Product</th>
			<th class="column-2"></th>
			<th class="column-3">Price</th>
			<th class="column-4">Quantity</th>
			<th class="column-5">Total</th>
		</tr>
		{{# each this.items}}
		<tr class="">
			<td class="column-1">
					<img src="{{this.item.imgPath}}"  height="50"  alt="IMG">
			</td>
			<td class="column-2"><a class="hov3" style="color: black" href="/products/product-details/{{this.item.sku}}">{{this.item.name}}</a> &nbsp;<a href="/users/review-item?sku={{this.item.sku}}&orderId={{../this._id}}" {{# if (ifEqual this.gotReview true)}} hidden {{/if}}>review item</a></td>
			<td class="column-3">$ {{this.item.price}}</td>
			<td class="column-4">{{this.qty}}</td>
			<td class="column-5">$ {{this.price}}</td>
		</tr>
		{{/each}}
		<tr class="table_head">
			<th class="column-1"><strong class="stext-104 ">{{this.date}}</strong></th>
			<th class="column-2"></th>
			<th class="column-3"></th>
			<th class="column-4"></th>
			<th class="column-5"><strong class="stext-104 ">Total Price: $ {{fixed this.cart.totalPrice}}<h1 class="stext-102" {{#if (ifEqual this.cart.availableCoupon 2)}} hidden {{/if}}>(with coupon)</h1></strong></th>
		</tr>


	</table>

</div>
{{/each}}

</div>
