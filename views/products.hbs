
{{# each products }}
  <div class="card-deck">
    {{# each this}}
    <div class="card" style="width: 18rem;">
      <img src={{this.imgPath}} class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{ this.name }}</h5>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text">{{this.price}}</p>
        <a href="/add-to-cart/{{this.sku}}" class="btn btn-primary">Add To Cart</a>
        <a href="#" class="btn btn-primary">More Info</a>
      </div>
    </div>
    {{/each}}

  </div>
{{/each}}
